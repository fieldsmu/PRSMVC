@model IEnumerable<PRSMVC.PRLineItem>

@{
    ViewBag.Title = "Index";
    double grandTotal = 0;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.PartNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseRequest.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.PartNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchaseRequest.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>@(item.Quantity * item.Product.Price)</td>
        @{
            grandTotal = grandTotal + (item.Quantity * item.Product.Price);
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
